<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LearningActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF388"
        app:contentInsetStart="0dp"
        app:contentInsetEnd="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">
            <ImageView
                android:id="@+id/learnBackArrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back_24"/>
            <TextView
                android:id="@+id/learnToolText"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Learning Activity"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/learnBackArrow">
            </TextView>
            <ImageView
                android:id="@+id/learnImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_learn"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

</LinearLayout>